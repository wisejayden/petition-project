        <input type="text" name ="city"id="city" placeholder="City" value ="{{#if city}}{{city}}{{/if}}"/>
        <input type="text" name ="homepage" id="homepage" placeholder="Homepage" value ="{{#if homepage}}{{homepage}}{{/if}}"/>



